{
  "manifest_version": 2,
  "name": "Taltio",
  "version": "1.0.0",
  "description": "Quickly access and insert saved AI prompts into any text input field",

  "browser_specific_settings": {
    "gecko": {
      "id": "taltio@promptsensei.dev"
    }
  },

  "permissions": ["storage", "activeTab", "contextMenus", "<all_urls>"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["preact.min.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "commands": {
    "trigger-prompt-dropdown": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Show AI prompt dropdown"
    }
  },

  "web_accessible_resources": ["content.css"]
}
