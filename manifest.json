{
  "manifest_version": 2,
  "name": "AI Prompt Auto-Complete",
  "version": "1.0.0",
  "description": "Auto-complete saved AI prompts with customizable hotkeys and text triggers",
  
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_end",
    "all_frames": true
  }],
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  
  "commands": {
    "trigger-prompt-dropdown": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Show AI prompt dropdown"
    }
  },
  
  "web_accessible_resources": [
    "content.css"
  ]
}
